@model List<Restaurantly.AcunMedya.Entities.Reservation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Şef</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Ana Sayfa</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">

        <!-- /# column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Rezervasyon Listesi</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>İsim</th>
                                    <th>Email</th>
                                    <th>Telefon Numarası</th>
                                    <th>Açıklama</th>
                                    <th>Rezervasyon Tarihi</th>
                                    <th>Saat</th>
                                    <th>Rezervasyon Sayısı</th>
                                    <th>Durum</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.ReservationId</th>
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Description</td>
                                        <td>@item.ReservationDate</td>
                                        <td>@item.Time</td>
                                        <td>@item.GuestCount</td>
                                        <td>@item.ReservationStatus</td>




                                        <td><a href="/Reservation/ReservationDelete/@item.ReservationId" class="btn btn-danger"> Sil</a></td>
                                        <td><a href="/Reservation/ReservationEdit/@item.ReservationId" class="btn btn-info"> Güncelle</a></td>


                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Reservation/AddReservation/" class="btn btn-success"> Rezervasyon Ekle</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>
<!-- #/ container -->
