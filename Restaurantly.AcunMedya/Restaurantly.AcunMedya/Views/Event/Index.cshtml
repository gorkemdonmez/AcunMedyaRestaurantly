@model List<Restaurantly.AcunMedya.Entities.Events>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Etkinlik</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Ana Sayfa</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">

        <!-- /# column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Etkinlik Listesi</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık</th>
                                    <th>Açıklama</th>
                                    <th>Resim Linki</th>
                                    <th>Fiyat</th>
                                    <th>Kısa Açıklama</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.EventId</th>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.Img</td>
                                        <td>@item.Price</td>
                                        <td>@item.Desc2</td>





                                        <td><a href="/Event/EventDelete/@item.EventId" class="btn btn-danger"> Sil</a></td>
                                        <td><a href="/Event/EventEdit/@item.EventId" class="btn btn-info"> Güncelle</a></td>


                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Event/AddEvent/" class="btn btn-success"> Etkinlik Ekle</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>
<!-- #/ container -->
