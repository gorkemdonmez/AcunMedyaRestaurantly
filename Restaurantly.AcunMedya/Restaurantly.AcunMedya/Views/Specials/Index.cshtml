@model List<Restaurantly.AcunMedya.Entities.Special>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Spesiyaller</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Ana Sayfa</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">

        <!-- /# column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Spesiyaller Listesi</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık</th>
                                    <th>Kısa Açıklama</th>
                                    <th>Full Açıklama</th>
                                    <th>Resim Link </th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.SpecialId</th>
                                        <td>@item.Title</td>
                                        <td>@item.ShortDescription</td>
                                        <td>@item.FullDescription</td>
                                        <td>@item.ImageUrl</td>




                                        <td><a href="/Specials/SpecialsDelete/@item.SpecialId" class="btn btn-danger"> Sil</a></td>
                                        <td><a href="/Specials/SpecialEdit/@item.SpecialId" class="btn btn-info"> Güncelle</a></td>


                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Specials/AddSpecials/" class="btn btn-success"> Spesiyal Ekle</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>
<!-- #/ container -->
