@model List<Restaurantly.AcunMedya.Entities.Notification>

<div class="header">
    <div class="header-content clearfix">

        <div class="nav-control">
            <div class="hamburger">
                <span class="toggle-icon"><i class="icon-menu"></i></span>
            </div>
        </div>
        <div class="header-left">
            <div class="input-group icons">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-transparent border-0 pr-2 pr-sm-3" id="basic-addon1"><i class="mdi mdi-magnify"></i></span>
                </div>
                <input type="search" class="form-control" placeholder="Arama Yap" aria-label="Arama Yap">
                <div class="drop-down   d-md-none">
                    <form action="#">
                        <input type="text" class="form-control" placeholder="Arama Yap">
                    </form>
                </div>
            </div>
        </div>
        <div class="header-right">
            <ul class="clearfix">
                <li class="icons dropdown">
                    <a href="javascript:void(0)" data-toggle="dropdown">
                        <i class="mdi mdi-email-outline"></i>
                        <span class="badge gradient-1 badge-pill badge-primary">3</span>
                    </a>
                    <div class="drop-down animated fadeIn dropdown-menu">
                        <div class="dropdown-content-heading d-flex justify-content-between">
                            <span class="">2 Yeni Mesaj</span>

                        </div>
                        <div class="dropdown-content-body">
                            <ul>
                                <li class="notification-unread">
                                    <a href="javascript:void()">
                                        <img class="float-left mr-3 avatar-img" src="~/Images/yigit.jpg" alt="">
                                        <div class="notification-content">
                                            <div class="notification-heading">Yiğit Yılmaz</div>
                                            <div class="notification-timestamp">8 Saat Önce</div>
                                            <div class="notification-text">Rezervasyon hakkında sorun yaşıyorum.</div>
                                        </div>
                                    </a>
                                </li>
                                <li class="notification-unread">
                                    <a href="javascript:void()">
                                        <img class="float-left mr-3 avatar-img" src="~/Images/deno.jpg" alt="">
                                        <div class="notification-content">
                                            <div class="notification-heading">Özgür Sarıçakmak</div>
                                            <div class="notification-timestamp">1 Gün Önce</div>
                                            <div class="notification-text">Özel Teşekkür</div>
                                        </div>
                                    </a>
                                </li>
                               
                            </ul>

                        </div>
                    </div>
                </li>
                <li class="icons dropdown">
                    <a href="javascript:void(0)" data-toggle="dropdown">
                        <i class="mdi mdi-bell-outline"></i>
                        <span class="badge badge-pill gradient-2 badge-primary">@ViewBag.notificationIsReadbyfalseCount</span>
                    </a>
                    <div class="drop-down animated fadeIn dropdown-menu dropdown-notfication">
                        <div class="dropdown-content-heading d-flex justify-content-between">
                            <span class="">@ViewBag.notificationIsReadbyfalseCount Yeni Bildirim Var</span>

                        </div>
                        <div class="dropdown-content-body">
                            <ul>
                                @foreach (var item in Model)
                                {
                                    <li>
                                        <a href="/AdminLayout/NotificationStatusChangeToTrue/@item.NotificationId">
                                            <span class="mr-3 avatar-icon bg-success-lighten-2" style="background-color:@item.IconColor"><i class="@item.Icon"></i></span>
                                            <div class="notification-content">
                                                <h6 class="notification-heading">@item.Title</h6>
                                                <span class="notification-text">@item.Time</span>
                                            </div>
                                        </a>
                                    </li>
                                }


                            </ul>

                        </div>
                    </div>
                </li>
                <li class="icons dropdown d-none d-md-flex">
                    <a href="javascript:void(0)" class="log-user" data-toggle="dropdown">
                        <span>Türkçe</span>  <i class="fa fa-angle-down f-s-14" aria-hidden="true"></i>
                    </a>
                    <div class="drop-down dropdown-language animated fadeIn  dropdown-menu">
                        <div class="dropdown-content-body">
                            <ul>
                                <li><a href="javascript:void()">Türkçe</a></li>
                                <li><a href="javascript:void()">İngilizce</a></li>
                            </ul>
                        </div>
                    </div>
                </li>
                <li class="icons dropdown">
                    <div class="user-img c-pointer position-relative" data-toggle="dropdown">
                        <span class="activity active"></span>
                        <img src="~/Images/GD.jpeg" height="40" width="40" alt="">
                    </div>
                    <div class="drop-down dropdown-profile   dropdown-menu">
                        <div class="dropdown-content-body">
                            <ul>
                                <li>
                                    <a href="app-profile.html"><i class="icon-user"></i> <span>Profil</span></a>
                                </li>
                                <li>
                                    <a href="email-inbox.html"><i class="icon-envelope-open"></i> <span>Mesajlar</span> <div class="badge gradient-3 badge-pill badge-primary">3</div></a>
                                </li>

                                <hr class="my-2">
                                <li>
                                    <a href="page-lock.html"><i class="icon-lock"></i> <span>Ekranı Kilitle</span></a>
                                </li>
                                <li><a href="page-login.html"><i class="icon-key"></i> <span>Çıkış Yap</span></a></li>
                            </ul>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
