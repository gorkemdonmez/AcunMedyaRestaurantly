@model List<Restaurantly.AcunMedya.Entities.Product>
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Ana Sayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Ürünler</a></li>
        </ol>
    </div>
</div>
<!-- row -->
<div class="container-fluid">

    <form method="get">
        <div class="form-group">
            <input type="text" name="SearchText" placeholder="Aranacak Kelime" class="form-control" />
            <br />
            <button class="btn btn-dark gradient-9">Ara</button>
        </div>
    </form>
    <div class="row">

        <!-- /# column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Kategori Listesi</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Yemek Adı</th>
                                    <th>Açıklama</th>
                                    <th>Fiyatı</th>
                                    <th>Kategori</th>
                                    <th>Resim</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>@item.Price</td>
                                        <td>@item.Category.CategoryName</td>

                                        <td><img src="@item.ImageUrl" style="width:100px; height:100px" /></td>




                                        <td><a href="/Product/ProductDelete/@item.ProductId" class="btn btn-danger"> Sil</a></td>
                                        <td><a href="/Product/ProductUpdate/@item.ProductId" class="btn btn-info"> Güncelle</a></td>


                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Product/ProductCreate/" class="btn btn-success"> Kategori Ekle</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>
<!-- #/ container -->
