@model List<Restaurantly.AcunMedya.Entities.Adres>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Adres</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Ana Sayfa</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">

        <!-- /# column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Adres Listesi</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Konum</th>
                                    <th>Saatler</th>
                                    <th>E Mail</th>
                                    <th>Telefon</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.AdresId</th>
                                        <td>@item.Location</td>
                                        <td>@item.OpenHours</td>
                                        <td>@item.Email</td>
                                        <td>@item.Call</td>



                                        <td><a href="/Adress/AdressDelete/@item.AdresId" class="btn btn-danger"> Sil</a></td>
                                        <td><a href="/Adress/AdressEdit/@item.AdresId" class="btn btn-info"> Güncelle</a></td>


                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Adress/AddAdress/" class="btn btn-success"> Adres Ekle</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>
<!-- #/ container -->
